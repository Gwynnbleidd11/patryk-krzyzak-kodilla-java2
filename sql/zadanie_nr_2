SELECT IL.NAME AS TASKNAME, I.SUMMARY, I.DESCRIPTION
FROM ISSUES I JOIN ISSUESLISTS IL ON I.ISSUESLIST_ID = IL.ID;

SELECT U.FIRSTNAME, U.LASTNAME, I.SUMMARY, I.DESCRIPTION
FROM ISSUES I JOIN USERS U ON I.USER_ID_ASSIGNEDTO = U.ID;

SELECT U.FIRSTNAME, U.LASTNAME, COUNT(*) AS TASKS_NUMBER
FROM ISSUES I JOIN USERS U ON I.USER_ID_ASSIGNEDTO = U.ID
GROUP BY U.FIRSTNAME, U.LASTNAME
HAVING COUNT(*) > 0
ORDER BY U.LASTNAME, U.FIRSTNAME;

SELECT U.FIRSTNAME, U.LASTNAME, IL.NAME AS TASKNAME, I.SUMMARY, I.DESCRIPTION
FROM ISSUES I
JOIN ISSUESLISTS IL ON I.ISSUESLIST_ID = IL.ID
JOIN USERS U ON I.USER_ID_ASSIGNEDTO = U.ID;